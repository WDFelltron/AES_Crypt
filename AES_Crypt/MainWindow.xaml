<Window x:Class="AES_Crypt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AES_Crypt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Plain Text:"/>
            <TextBox x:Name="txtPlainText" Margin="0 5"/>
            <Button Content="Encrypt" Click="Encrypt_Click" Margin="0 10"/>
            <TextBlock Text="Encrypted Text:"/>
            <TextBox x:Name="txtEncryptedText" Margin="0 5"/>
            <Button Content="Decrypt" Click="Decrypt_Click" Margin="0 10"/>
            <TextBlock Text="Decrypted Text:"/>
            <TextBox x:Name="txtDecryptedText" Margin="0 5"/>
        </StackPanel>
    </Grid>
</Window>
